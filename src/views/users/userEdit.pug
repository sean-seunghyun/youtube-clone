extends ../base




block content
    image(src=`/${user.avatarUrl}` width="100" height="100")
    form(method='post' enctype="multipart/form-data")
        label(for="avatar") avatar
        input(type="file" name="avatar" id="avatar" accept="image/*")
        input(type="text" name="emailAddress" value=user.emailAddress, placeholder='emailAddress', required)
        input(type="text" name="name" value=user.name, placeholder='name', required)
        input(type='text', name="location", value=user.location, placeholder='location')
        input(type="submit" value="Update Profile")
    if(!user.socialSignUp)
        div.edit-profile__password
            a(href="change-password") change password &#10140;
