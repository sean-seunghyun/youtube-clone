extends base

block header
    h1 Welcome to upload page!

block content
    p #{error}
    form(method='POST')
        input(type='text', name='title', placeholder='title', maxlength=128, required)
        input(type='text', name='description', placeholder='description', minlength=4, required)
        input(type='text', name='hashTags', placeholder='put down commas to use multiple hashtags ', required)
        input(type='submit', value='send')