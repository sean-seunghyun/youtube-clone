extends base


block nav
    a(href="/") Home

block header
    h1 Edit : #{video.title}

block content
    form(method='post')
            input(type="text" name="title" value=video.title, placeholder="Video Title", maxlength=128, required)
            input(type="text" name="description" value=video.description, placeholder="Video description", minlength=4, required)
            input(type='text', name='hashTags', value=video.hashTags.map(hashTag => hashTag.substring(1)).join(), placeholder='put down commas to use multiple hashtags ', required)
            input(type="submit" value="Save")
