extends base.pug

block content
    div#videoContainer(data-id = video._id)
        video(src='/' + video.url)#video
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play

            div.videoControls__time
                span#currentTime 00:00
                span  /
                span#totalTime 00:00
            input(type='range', step='1', value='0', min='0')#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range", step="0.1", min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
                span#fullScreen
                    i.fas.fa-expand

    div.video__data
        p.video__title=video.title
        small.video__owner Uploaded by
            a(href=`/users/${video.owner._id}`)=video.owner.name

    //br
    //small uploaded by
    //    a(href=`/users/${video.owner._id}`) #{video.owner.name}
    //h4=video.description
    //h4=video.hashTags
    //small #{video.meta.views} #{video.meta.views === 1 ? "view" : "views"}
    //br
    //small #{video.createdAt}
    //br
    //small #{video.meta.rating}/5
    //hr
    if(String(video.owner._id) === String(user._id))
        a(href=`${video.id}/edit`) Edit current video
        br
        a(href=`${video.id}/delete`) Delete current video
block script
    script(src='/static/js/videoPlayer.js')